generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mecanico {
  id    String @id @default(uuid())
  email String @unique
  senha String

  @@map("mecanicos")
}

model Cliente {
  id      String  @id @default(uuid())
  nome    String
  cpf     String  @unique
  celular String?

  servicos Servico[]

  @@map("clientes")
}

model Servico {
  id          String    @id @default(uuid())
  veiculo     String
  placa       String
  descricao   String?
  dataEntrada DateTime  @default(now())
  dataSaida   DateTime?

  cliente   Cliente @relation(fields: [clienteId], references: [id])
  clienteId String

  @@map("servicos")
}
